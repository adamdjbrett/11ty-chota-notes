---
layout: base
title: Blog
pagination:
  data: collections.posts
  size: 5
  alias: posts
permalink: "/blog/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}"
---

<h2>Blog</h2>
<div class="row">
  {% for post in posts %}
  <div class="col-12">
    <div class="card post-card">
      <div class="card-content">
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <p><small>{{ post.date | date("LLL d, yyyy") }}</small></p>
        <p>{{ post.data.description or post.templateContent | striptags | truncate(180) }}</p>
        <a class="button primary" href="{{ post.url }}">Read more →</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>

<div class="row is-center">
  <div class="col is-center">
    <div class="tabs">
      {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">« Newer</a>{% endif %}
      <span class="active">Page {{ pagination.pageNumber + 1 }} of {{ pagination.pages.length }}</span>
      {% if pagination.href.next %}<a href="{{ pagination.href.next }}">Older »</a>{% endif %}
    </div>
  </div>
</div>
